{
  "name": "@knocklabs/javascript",
  "author": "@knocklabs",
  "version": "0.1.0-rc.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter=\"./packages/*\"",
    "dev": "turbo dev",
    "dev:next-example": "turbo dev --filter=\"./packages/*\" --filter=nextjs-example",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "release": "turbo run build && changeset version && changeset publish",
    "postinstall": "manypkg check"
  },
  "prettier": "@knocklabs/prettier-config",
  "packageManager": "yarn@4.1.0",
  "engines": {
    "node": "20.9.0"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "manypkg": {
    "defaultBranch": "main",
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "@knocklabs/eslint-config": "workspace:^",
    "@knocklabs/prettier-config": "workspace:^",
    "@knocklabs/typescript-config": "workspace:^",
    "@manypkg/cli": "^0.21.2",
    "prettier": "^3.1.0",
    "turbo": "^1.10.16"
  }
}
